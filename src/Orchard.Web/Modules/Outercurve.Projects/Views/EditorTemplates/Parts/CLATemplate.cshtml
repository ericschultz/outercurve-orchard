@model Outercurve.Projects.ViewModels.Parts.EditCLATemplateViewModel

@Html.HiddenFor(model => model.Id)
<div class="editor-label">
    @Html.LabelFor(model => model.Title, T("Description"))
</div>
    
<div class="editor-field">
    @Html.TextBoxFor(model => model.Title)
    @Html.ValidationMessageFor(model => model.Title)
</div>

<div class="editor-label">
    @Html.LabelFor(model => model.CLA, T("CLA Text"))
</div>
    
<div class="editor-field">
    @Html.TextAreaFor(model => model.CLA)
    @Html.ValidationMessageFor(model => model.CLA)
</div>
